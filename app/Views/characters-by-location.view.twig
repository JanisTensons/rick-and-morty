<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-5">
    {% for character in characters %}
        <div class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
            <div><img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
                      src="{{ character.getUrl() }}" alt="{{ character.getName() }}"></div>
            <div>
                <h5 class="ml-5 text-lg font-bold">{{ character.getName() }}</h5>
                <p class="ml-5 mb-2 text-md text-gray-900 dark:text-white">
                    {% set status = (character.getStatus() == 'Alive') ? 'green' : 'red' %}
                    <span style="color: {{ status }};">&#x25cf;</span> {{ character.getStatus() }}
                    - {{ character.getSpecies() }}
                </p>
                <p class="ml-5 font-normal text-sm text-gray-700 dark:text-gray-400">Last known location:</p>
                <p class="ml-5 pb-2 font-normal text-gray-700 dark:text-gray-400">{{ character.GetLocation() }}</p>
